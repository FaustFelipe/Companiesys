<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="@dimen/dimen100"
  android:background="@color/white"
  android:foreground="?attr/selectableItemBackground"
  android:layout_marginVertical="@dimen/dimen8"
  android:layout_marginHorizontal="@dimen/dimen10">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/img_enterprise"
    android:layout_width="@dimen/dimen106"
    android:layout_height="@dimen/dimen80"
    tools:src="@tools:sample/backgrounds/scenic"
    android:scaleType="centerCrop"
    android:layout_marginStart="@dimen/dimen12"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="@dimen/dimen0"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dimen14"
    app:layout_constraintStart_toEndOf="@+id/img_enterprise"
    app:layout_constraintTop_toTopOf="@+id/img_enterprise"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_enterprise_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:textColor="@color/violet"
      android:textAppearance="@style/Text.Roboto.Bold.18sp"
      tools:text="@tools:sample/lorem"/>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_enterprise_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:layout_marginTop="@dimen/dimen4"
      tools:text="@tools:sample/lorem"
      android:textAppearance="@style/Text.Roboto.Italic.18sp"
      android:textColor="@color/gray"/>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_enterprise_country"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:layout_marginTop="@dimen/dimen2"
      tools:text="@tools:sample/lorem"
      android:textAppearance="@style/Text.Roboto.18sp"
      android:textColor="@color/gray"/>

  </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>