<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="@dimen/dimen0"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@drawable/toolbar_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/img_enterprise"
    android:layout_width="@dimen/dimen0"
    android:layout_height="@dimen/dimen156"
    android:layout_marginTop="@dimen/dimen24"
    android:layout_marginHorizontal="@dimen/dimen22"
    tools:src="@tools:sample/backgrounds/scenic"
    android:scaleType="centerCrop"
    android:visibility="gone"
    tools:visibility="visible"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintEnd_toEndOf="parent"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txt_enterprise_description"
    android:layout_width="@dimen/dimen0"
    android:layout_height="wrap_content"
    tools:text="@tools:sample/lorem"
    android:layout_marginTop="@dimen/dimen20"
    android:textColor="@color/gray"
    android:textAppearance="@style/Text.Roboto.18sp"
    android:layout_marginHorizontal="@dimen/dimen24"
    android:visibility="gone"
    tools:visibility="visible"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/img_enterprise"
    app:layout_constraintEnd_toEndOf="parent"/>

  <ProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="@dimen/dimen66"
    android:layout_height="@dimen/dimen66"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>